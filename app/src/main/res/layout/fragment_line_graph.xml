<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

                <View
                    android:id="@+id/base_view"
                    android:layout_width="match_parent"
                    android:background="@color/color_primary_light"
                    android:layout_height="100dp"/>



                <android.support.v7.widget.CardView

                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"

                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:behavior_overlapTop="64dp"
                    app:expandedTitleMarginBottom="70dp"
                    card_view:cardElevation="2dp"
                    card_view:cardUseCompatPadding="true"
                    app:layout_anchor="@id/base_view"
                    app:layout_anchorGravity="bottom|right|end">

                    <ProgressBar
                        android:id="@+id/progressBar1"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal|center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/stockPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="16dp"
                            android:textSize="40sp" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chart"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"


                            />


                    </LinearLayout>
                </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>




                <!--<com.db.chart.view.LineChartView-->
                <!--xmlns:chart="http://schemas.android.com/apk/res-auto"-->
                <!--android:id="@+id/linechart"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"/>-->


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="@string/statistics" />

                <android.support.v7.widget.CardView

                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"

                    android:id="@+id/card_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:behavior_overlapTop="64dp"
                    app:expandedTitleMarginBottom="70dp"
                    card_view:cardElevation="2dp"
                    card_view:cardUseCompatPadding="true">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:orientation="vertical">

                            <TextView
                                style="@style/stats_bold"
                                android:id="@+id/text_open"
                                android:text="-"  />

                            <TextView
                                style="@style/stats_legend"
                                android:text="Open" />

                            <TextView
                                style="@style/stats_bold"
                                android:id="@+id/text_high"
                                android:text="-" />

                            <TextView
                                style="@style/stats_legend"
                                android:text="Today's High" />
                            <TextView
                                style="@style/stats_bold"
                                android:id="@+id/text_low"
                                android:text="-" />

                            <TextView
                                style="@style/stats_legend"

                                android:text="Today's Low" />

                            <TextView
                                style="@style/stats_bold"
                                android:id="@+id/text_52High"
                                android:text="-" />

                            <TextView
                                style="@style/stats_legend"
                                android:text="52 Wk High" />
                            <TextView
                                style="@style/stats_bold"
                                android:id="@+id/text_52Low"
                                android:text="-" />

                            <TextView
                                style="@style/stats_legend"

                                android:text="52 Wk Low" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:orientation="vertical">

                            <TextView
                                style="@style/stats_bold"
                                android:id="@+id/text_volume"
                                android:text="-"  />

                            <TextView
                                style="@style/stats_legend"
                                android:text="Volume" />

                            <TextView
                                style="@style/stats_bold"
                                android:id="@+id/text_avg_volume"
                                android:text="-" />

                            <TextView
                                style="@style/stats_legend"
                                android:text="Average Volume" />
                            <TextView
                                style="@style/stats_bold"
                                android:id="@+id/text_mkt_cap"
                                android:text="-" />

                            <TextView
                                style="@style/stats_legend"
                                android:text="Market Cap" />

                            <TextView
                                style="@style/stats_bold"
                                android:id="@+id/text_pe_ratio"
                                android:text="-" />

                            <TextView
                                style="@style/stats_legend"

                                android:text="P/E Ratio" />
                            <TextView
                                style="@style/stats_bold"
                                android:id="@+id/text_div"
                                android:text="-" />

                            <TextView
                                style="@style/stats_legend"
                                android:text="Div/Yield" />


                        </LinearLayout>

                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>

